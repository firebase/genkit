<configuration>
    <!-- 
        IMPORTANT: For MCP servers, logging MUST go to stderr, not stdout!
        The MCP protocol uses stdout exclusively for JSON-RPC messages.
        Any non-JSON output to stdout will break the protocol.
    -->
    
    <!-- Console appender that writes to stderr (required for MCP) -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Jetty logging noise -->
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="org.eclipse.jetty.io" level="WARN"/>
    <logger name="org.eclipse.jetty.server" level="INFO"/>
    <logger name="org.eclipse.jetty.util" level="WARN"/>
    <logger name="org.eclipse.jetty.http" level="WARN"/>

    <!-- Genkit logging -->
    <logger name="com.google.genkit" level="INFO"/>
    <logger name="com.google.genkit.core" level="DEBUG"/>
    
    <!-- MCP Plugin logging -->
    <logger name="com.google.genkit.plugins.mcp" level="INFO"/>
    
    <!-- MCP SDK logging (reduce noise) -->
    <logger name="io.modelcontextprotocol" level="WARN"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDERR"/>
    </root>
</configuration>
