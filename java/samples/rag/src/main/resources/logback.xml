<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Jetty logging noise -->
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="org.eclipse.jetty.io" level="WARN"/>
    <logger name="org.eclipse.jetty.server" level="INFO"/>
    <logger name="org.eclipse.jetty.util" level="WARN"/>
    <logger name="org.eclipse.jetty.http" level="WARN"/>

    <!-- Genkit logging -->
    <logger name="com.google.genkit" level="INFO"/>
    <logger name="com.google.genkit.core" level="DEBUG"/>
    <logger name="com.google.genkit.plugins.openai" level="DEBUG"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
