set -euo pipefail

if ((EUID == 0)); then
  echo "Please do not run as root"
  exit
fi

TOP_DIR=$(git rev-parse --show-toplevel)

PROJECT_DIRS=(
  "packages/dotprompt"
  "packages/genkit"
  "plugins/chroma"
  "plugins/firebase"
  "plugins/google-ai"
  "plugins/google-cloud"
  "plugins/ollama"
  "plugins/pinecone"
  "plugins/vertex-ai"
  "samples/hello"
)

for PROJECT_DIR in "${PROJECT_DIRS[@]}"; do
  uv \
    --directory=${TOP_DIR}/py \
    --project "$PROJECT_DIR" \
    build
done
