# Run releasekit tests across all supported Python versions (3.10–3.14)
# using tox with parallel execution.
#
# Usage:
#   bin/run_tests_with_tox                # all versions in parallel
#   bin/run_tests_with_tox -e py312       # single version
#   bin/run_tests_with_tox -- -k test_overlap  # pass args to pytest
#
# Requires: uv tool install tox --with tox-uv

set -euo pipefail

# Resolve releasekit root relative to this script (bin/../).
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
RELEASEKIT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

echo "Running releasekit tests via tox (Python 3.10–3.14)..."

# Use -p auto for parallel execution across Python versions.
# Any arguments passed to this script ($@) are forwarded to tox.
exec tox -p auto -c "$RELEASEKIT_DIR/tox.ini" "$@"
