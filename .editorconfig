# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
quote_type = single

[*.py]
indent_size = 4
max_line_length = 120
indent_style = space
quote_type = single

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_size = 4
indent_style = tab
max_line_length = 120
